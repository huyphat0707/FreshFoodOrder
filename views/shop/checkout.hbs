<div class="page__checkout">
    <div id="body">
        <h2>Responsive Checkout Form</h2>
        <div id="charge-error" class="alert alert-danger {{#if noError}} hidden {{/if}} ">
            {{errMsg}}
        </div>
        <div class="row">
            <div class="col-75">
                <div class="container">
                    <form action="/checkout" id="checkout-form" method="POST">
                        <div class="row">
                            <div class="col-50">
                                <h3>Billing Address</h3>
                                <label for="name"><i class="fa fa-user"></i> Full Name</label>
                                <input type="text" id="name" name="name" placeholder="">
                                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                <input type="text" id="email" name="email" placeholder="">
                                <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                                <input type="text" id="address" name="address" placeholder="">
                                <label for="city"><i class="fa fa-institution"></i> City</label>
                                <input type="text" id="city" name="city" placeholder="">
                            </div>
                            <div class="col-50">
                                <h3>Payment</h3>
                                <label for="fname">Accepted Cards</label>
                                <div class="icon-container">
                                    <i class="fa fa-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-amex" style="color:blue;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                    <i class="fa fa-cc-discover" style="color:orange;"></i>
                                </div>
                                <label for="card-name">Card Holder Name</label>
                                <input type="text" id="card-name" name="" placeholder="">
                                <label for="card-number">Credit card number</label>
                                <input type="text" id="card-number" name="" placeholder="1111-2222-3333-4444">
                                <label for="card-cvc">CVV</label>
                                <input type="text" id="card-cvc" name="" placeholder="352">
                                <div class="row">
                                    <div class="col-50">
                                        <label for="card-expiry-month">Exp Month</label>
                                        <input type="text" id="card-expiry-month" name="" placeholder="September">
                                    </div>
                                    <div class="col-50">
                                        <label for="card-expiry-year">Exp Year</label>
                                        <input type="text" id="card-expiry-year" name="" placeholder="2018">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn">Buy now</button>
                    </form>
                </div>
            </div>
            <div class="col-25">
                <div class="container">
                    <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <span
                                class="badge"> {{totalQty}} </span></span>
                    </h4>
                    {{#each products}}
                    <p><a href="/detail/{{this.item._id}}"> {{this.item.Name}} </a> <span class="price bases__text-bold">${{this.price}} </span></p>
                    {{/each}}
                    <hr>
                    <p>Total <span class="price" style="color:black"><b>$ {{totalPrice}} </b></span></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>