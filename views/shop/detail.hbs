<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center">
			<div class="col-first">
				<h1>Thông tin sản phẩm</h1>
			</div>
		</div>
	</div>
</section>
<div class="container pages__detailpro">
	{{# products}}
	<div class="row s_product_inner">
		<div class="col-left">
			<div class="single-prd-item">
				<img class="img-fluid" width="350px" height=" 400px" src="/upload/{{this.Image}}" alt="">
			</div>
		</div>
		<div class="col-right">
			<div class="d-flex">
				<div class="">Tên sản phẩm:</div>
				<div class="bases__font--30 bases__text-bold">{{this.Name}}</div>
			</div>
			<div class="d-flex">
				<div>Giá niêm yết:</div>
				<div class="bases__font--20">${{this.Price}} </div>
			</div>
			<div class="list">
				<a href="#"></a><span>Tình trạng</span> : Còn hàng</a>
			</div>
			{{!-- <div class="d-flex">
				<div>Mô tả sản phẩm:</div>
				<div>{{this.Description }}</div>
			</div> --}}

		</div>
		<div class="card_area d-flex align-items-center">
			<a class="primary-btn" href="/cart/{{this._id}}">Thêm vào giỏ hàng</a>
		</div>
	</div>
</div>
{{/products}}
</div>
